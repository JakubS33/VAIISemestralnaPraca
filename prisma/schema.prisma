generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TransactionType {
  BUY
  SELL
}

enum OtherEntryType {
  PLUS
  MINUS
}

enum AssetType {
  CRYPTO
  STOCK
  ETF
  CASH
}

enum PriceProvider {
  COINGECKO
  TWELVEDATA
  MANUAL
}

enum WalletAssetKind {
  MAIN
  OTHER
}

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  password String

  wallets  Wallet[]
}

model Wallet {
  id       String  @id @default(cuid())
  name     String
  currency String  @default("EUR")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId  String
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  transactions Transaction[]
  otherEntries OtherEntry[]
  walletAssets WalletAsset[]
}

model Asset {
  id        String    @id @default(cuid())
  symbol    String
  type      AssetType
  name      String

  // Which external service is used to fetch live price.
  // - COINGECKO: apiId = CoinGecko coin id (e.g. "bitcoin")
  // - TWELVEDATA: apiId = provider symbol (e.g. "AAPL")
  provider  PriceProvider @default(MANUAL)
  apiId     String?

  // Optional exchange hint (useful for stocks/ETFs). EU exchanges omitted for now.
  exchange  String?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  transactions Transaction[]
  walletAssets WalletAsset[]
  
  @@index([type, symbol])
  @@index([type, name])
  @@unique([provider, apiId, type])
}

model Transaction {
  id          String @id @default(cuid())

  walletId    String
  wallet      Wallet @relation(fields: [walletId], references: [id], onDelete: Cascade)

  assetId     String
  asset       Asset  @relation(fields: [assetId], references: [id], onDelete: Restrict)

  quantity    Decimal @db.Decimal(18, 8)
  pricePerUnit Decimal? @db.Decimal(18, 8) // odporúčané (cena v čase transakcie)
  type        TransactionType
  date        DateTime
  note        String?
}

model OtherEntry {
  id        String @id @default(cuid())

  walletId  String
  wallet    Wallet @relation(fields: [walletId], references: [id], onDelete: Cascade)

  amount    Decimal @db.Decimal(18, 2)
  date      DateTime
  note      String?
  type      OtherEntryType
}

model WalletAsset {
  id       String @id @default(cuid())

  walletId String
  wallet   Wallet @relation(fields: [walletId], references: [id], onDelete: Cascade)

  kind     WalletAssetKind
  // For MAIN this is a display label (usually Asset.symbol). For OTHER it's a free-form label.
  name     String

  // MAIN assets reference the global asset catalog.
  assetId  String?
  asset    Asset? @relation(fields: [assetId], references: [id], onDelete: Restrict)
  amount   Decimal? @db.Decimal(18, 8) // len pre MAIN
  value    Decimal  @db.Decimal(18, 2) // v mene peňaženky, môže byť aj záporné pre OTHER

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([walletId, assetId, kind])
}